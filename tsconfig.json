{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "sourceMap": true,
      "removeComments": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "typeRoots": ["typings", "node_modules/@types"],
      "esModuleInterop": true
    },
    "exclude": ["node_modules"],
    "include": [
      "config/**/*"
    ]
  },
  "compilerOptions": {
    "target": "es6", 
    "module": "esnext",
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@componentsitem/*": ["src/containers/pages/main/components/*"],
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["src/assets/*"],
      "@pages/*": ["src/containers/pages/*"],
      "@router/*": ["src/router/*"],
      "@config/*": ["src/config/*"],
      "@store/*": ["src/store/*"],
      "@jurisdiction/*": ["src/server/jurisdiction/*"],
      "@eventemitter/*": ["src/eventemitter/*"],
      "@interface/*": ["src/interface/*"],
      "@server/*": ["src/server/*"]
    },
    "typeRoots": ["typings", "node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules", "config/**/*"],
  "include": [
    "src/**/*",
    "typings/*.d.ts"
  ]
}